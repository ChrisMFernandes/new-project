<section class="post-header">
  <h1 id="header-text">See what others are saying about things</h1>
</section>

<div id="post-container"><br>
  <% @posts.each do |post| %>
    <div class="row justify-content-center">
      <div class="col-sm-6 text-center">
        <div class="card">
          <div class="card-header">
            Written by: <%= post.author %>
          </div>
          <div class="card-body">
            <h5 class="card-title">
              <%= post.title %>
            </h5>
            <p class="card-text">
              <%= post.body %>
            </p>
            <%= link_to 'View', post_path(post), class: "btn btn-primary"%>
          </div>
        </div>
      </div>
    </div><br>
  <% end %>
</div>