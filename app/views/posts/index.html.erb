<div class="container">
  <% @posts.each do |post| %>
    <div class="row justify-content-center">
      <div class="col-sm-8 text-center">
        <div class="card">
          <div class="card-header">
            <%= post.author %>
          </div>
          <div class="card-body">
            <h5 class="card-title">
              <%= post.title %>
            </h5>
            <p class="card-text">
              <%= post.body %>
            </p>
            <%= link_to 'View', post_path(post), class: "btn btn-primary"%>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>