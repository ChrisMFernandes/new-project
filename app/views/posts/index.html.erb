<div class="row">
  <% @posts.each do |post| %>
    <div class="col-sm-4">
      <div class="card">
        <div class="card-header">
          <%= post.author %>
        </div>
        <div class="card-body">
          <h5 class="card-title">
            <%= post.title %>
          </h5>
          <p class="card-text">
            <%= post.body %>
          </p>
          <%= link_to 'Post', post_path(post), class: "btn btn-primary"%>
        </div>
      </div>
    </div>
  <% end %>
</div>