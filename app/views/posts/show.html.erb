<section class="post-header">

</section>

<div class="card text-center" id="post-card">
  <div class="card-header">
    <h5>Check out this post written by: <%= @post.author %></h5>
  </div>
  <div class="card-body">
    <h5 class="card-title">
      <%= @post.title %>
    </h5>
    <p class="card-text">
      <%= @post.body %>
    </p>
    <%= link_to "Back", posts_path, class: "btn btn-primary" %>
  </div>
  <div class="card-footer text-muted">
    <p>Posted on: <%= @post.created_at.strftime("%x") %> at: <%= @post.created_at.strftime("%X") %></p>
  </div>
</div>